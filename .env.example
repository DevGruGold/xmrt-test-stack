# XMRT Test Stack Environment Variables
# Copy this file to .env.local and fill in the actual values

# =============================================================================
# BLOCKCHAIN CONFIGURATION
# =============================================================================

# Infura API Key for Ethereum RPC access
VITE_INFURA_API_KEY=your_infura_api_key_here

# Reown (formerly WalletConnect) Project ID
VITE_REOWN_PROJECT_ID=your_reown_project_id_here

# =============================================================================
# WEB3AUTH CONFIGURATION
# =============================================================================

# Web3Auth Client ID for social login
VITE_WEB3AUTH_CLIENT_ID=your_web3auth_client_id_here

# Web3Auth Client Secret
VITE_WEB3AUTH_CLIENT_SECRET=your_web3auth_client_secret_here

# Web3Auth JWKS Endpoint
VITE_WEB3AUTH_JWKS_ENDPOINT=https://api-auth.web3auth.io/.well-known/jwks.json

# =============================================================================
# SMART CONTRACT CONFIGURATION
# =============================================================================

# XMRT Token Contract Address on Sepolia
VITE_XMRT_CONTRACT_ADDRESS=0x77307DFbc436224d5e6f2048d2b6bDfA66998a15

# =============================================================================
# NETWORK CONFIGURATION
# =============================================================================

# Network name (sepolia for testnet)
VITE_NETWORK_NAME=sepolia

# Chain ID (11155111 for Sepolia testnet)
VITE_CHAIN_ID=11155111

# RPC URL (will be constructed using Infura key)
VITE_RPC_URL=https://sepolia.infura.io/v3/your_infura_api_key_here

# Block Explorer URL
VITE_BLOCK_EXPLORER_URL=https://sepolia.etherscan.io

# =============================================================================
# APPLICATION METADATA
# =============================================================================

# Application name for wallet connection
VITE_APP_NAME=XMRT Test Stack

# Application description
VITE_APP_DESCRIPTION=XMRT ecosystem testing and development platform

# Application URL
VITE_APP_URL=https://your-app-domain.vercel.app

# Application icon URL
VITE_APP_ICON=https://your-app-domain.vercel.app/favicon.ico

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Development mode (true/false)
VITE_DEV_MODE=true

# Enable debug logging (true/false)
VITE_DEBUG=false

# =============================================================================
# INSTRUCTIONS
# =============================================================================
# 1. Copy this file to .env.local
# 2. Replace all placeholder values with actual credentials
# 3. Never commit .env.local to version control
# 4. For Vercel deployment, set these as environment variables in the dashboard
